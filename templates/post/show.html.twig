{% extends 'base.html.twig' %}

{% block body %}
<article>
    <h1>{{ post.title }}</h1>
    <div>Créé le {{ post.createdAt | date('m/d/Y') }} par {{ post.writtenBy.email }}</div>
    <div>Catégorie : {{ post.categorizedBy.name | default('sans') }}</div>
    <div>{{ post.body }}</div>
</article>
<div class="side-column">
    {{ render_hinclude(controller('App\\Controller\\PostController::indexSameCategory', {post: post.id})) }}
</div>
{% endblock %}

{% block title %}
{{ post.title }}
{% endblock %}
